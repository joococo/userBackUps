<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mara">

    <TextView
        android:id="@+id/text_maratang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="5. 한우사골 마라탕"
        android:fontFamily="@font/blackhansansregular"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/maratang"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_maratang"
        app:srcCompat="@drawable/rectangle14" />

    <ImageView
        android:id="@+id/gguo_s"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_maratang"
        app:srcCompat="@drawable/rectangle14" />

    <ImageView
        android:id="@+id/gguo_l"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maratang"
        app:srcCompat="@drawable/rectangle14" />

    <ImageView
        android:id="@+id/shang"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gguo_s"
        app:srcCompat="@drawable/rectangle14" />

    <ImageView
        android:id="@+id/image_maratang"
        android:layout_width="140dp"
        android:layout_height="115dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/maratang"
        app:layout_constraintEnd_toEndOf="@+id/maratang"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/maratang"
        app:layout_constraintTop_toTopOf="@+id/maratang"/>

    <TextView
        android:id="@+id/text_mara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한우사골 마라탕"
        android:fontFamily="@font/scoredream_bold"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/maratang"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/maratang"
        app:layout_constraintTop_toBottomOf="@+id/image_maratang" />

    <TextView
        android:id="@+id/price_maratang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="6,500원"
        android:fontFamily="@font/scoredream_medium"
        app:layout_constraintEnd_toEndOf="@+id/maratang"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/maratang"
        app:layout_constraintTop_toBottomOf="@+id/text_mara" />

    <ImageView
        android:id="@+id/image_gguo_s"
        android:layout_width="140dp"
        android:layout_height="115dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/gguo"
        app:layout_constraintEnd_toEndOf="@+id/gguo_s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/gguo_s"
        app:layout_constraintTop_toTopOf="@+id/gguo_s" />

    <TextView
        android:id="@+id/text_gguo_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="꿔바로우(소)"
        android:fontFamily="@font/scoredream_bold"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/gguo_s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/gguo_s"
        app:layout_constraintTop_toBottomOf="@+id/image_gguo_s" />

    <TextView
        android:id="@+id/price_gguo_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="5,000원"
        android:fontFamily="@font/scoredream_medium"
        app:layout_constraintEnd_toEndOf="@+id/gguo_s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/gguo_s"
        app:layout_constraintTop_toBottomOf="@+id/text_gguo_s" />

    <ImageView
        android:id="@+id/image_gguo_l"
        android:layout_width="140dp"
        android:layout_height="115dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/gguo"
        app:layout_constraintEnd_toEndOf="@+id/gguo_l"
        app:layout_constraintStart_toStartOf="@+id/gguo_l"
        app:layout_constraintTop_toTopOf="@+id/gguo_l" />

    <TextView
        android:id="@+id/text_gguo_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="꿔바로우(대)"
        android:fontFamily="@font/scoredream_bold"
        app:layout_constraintEnd_toEndOf="@+id/gguo_l"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/gguo_l"
        app:layout_constraintTop_toBottomOf="@+id/image_gguo_l" />

    <TextView
        android:id="@+id/price_gguo_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="10,000원"
        android:fontFamily="@font/scoredream_medium"
        app:layout_constraintEnd_toEndOf="@+id/gguo_l"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/gguo_l"
        app:layout_constraintTop_toBottomOf="@+id/text_gguo_l" />

    <ImageView
        android:id="@+id/image_shang"
        android:layout_width="140dp"
        android:layout_height="115dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/shang"
        app:layout_constraintEnd_toEndOf="@+id/shang"
        app:layout_constraintStart_toStartOf="@+id/shang"
        app:layout_constraintTop_toTopOf="@+id/shang" />

    <TextView
        android:id="@+id/text_shang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="마라샹궈"
        android:fontFamily="@font/scoredream_bold"
        app:layout_constraintEnd_toEndOf="@+id/shang"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/shang"
        app:layout_constraintTop_toBottomOf="@+id/image_shang" />

    <TextView
        android:id="@+id/price_shang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="7,500원"
        android:fontFamily="@font/scoredream_medium"
        app:layout_constraintEnd_toEndOf="@+id/shang"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/shang"
        app:layout_constraintTop_toBottomOf="@+id/text_shang" />

    <Button
        android:id="@+id/goback"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/basket"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/basket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


</android.support.constraint.ConstraintLayout>