<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SelectSeat">

    <Button
        android:id="@+id/exitButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/seatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="185dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="좌석 선택"
        android:fontFamily="@font/scoredream_medium"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/seat_explain_iv"
        android:layout_width="118dp"
        android:layout_height="74dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/seat_explain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageView
        android:id="@+id/seat_plan_iv"
        android:layout_width="410dp"
        android:layout_height="410dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/select_seat_image"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/seat_button_0"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/green_seat_sero"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/choice_button_0"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/red_seat_sero"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/seat_button_1"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/green_seat_sero"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/choice_button_1"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/red_seat_sero"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/seat_button_2"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/green_seat_sero"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/choice_button_2"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/red_seat_sero"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/seat_button_3"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="206dp"
        android:layout_marginTop="79dp"
        android:background="@drawable/green_seat_garo"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/choice_button_3"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="206dp"
        android:layout_marginTop="79dp"
        android:background="@drawable/red_seat_garo"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/seat_button_4"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="273dp"
        android:background="@drawable/green_seat_garo"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/choice_button_4"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="273dp"
        android:background="@drawable/red_seat_garo"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/seat_button_5"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="332dp"
        android:background="@drawable/green_seat_garo"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/choice_button_5"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="332dp"
        android:background="@drawable/red_seat_garo"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/select_seat"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="@font/scoredream_medium"
        android:text="좌석 선택"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/selected_button1"
        android:layout_width="17dp"
        android:layout_height="15dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="79dp"
        android:background="#A9A9A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <Button
        android:id="@+id/selected_button2"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="79dp"
        android:background="#A9A9A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <Button
        android:id="@+id/selected_button3"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="273dp"
        android:background="#A9A9A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <Button
        android:id="@+id/selected_button4"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="109dp"
        android:background="#A9A9A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/selected_button"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="121dp"
        android:background="#A9A9A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seat_plan_iv"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</android.support.constraint.ConstraintLayout>
